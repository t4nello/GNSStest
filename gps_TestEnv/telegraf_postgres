[agent]
 interval = "10s"

  round_interval = true

  metric_batch_size = 1000000

  metric_buffer_limit = 100000

  collection_jitter = "0s"

  flush_interval = "10s"

  flush_jitter = "0s"

[[inputs.mqtt_consumer]]
  servers = ["tcp://127.0.0.1:1883"] 
  topics = ["gps/metric","test/1"] 
   data_format = "json"
   json_time_key = "time"
   json_time_format = "unix"
   json_string_fields = ["device"]
[[outputs.file]]
  files = ["/home/rpi4/metric.out"] 


[[outputs.postgresql]]
  connection = "host=localhost user=postgres password=admin123 sslmode=disable dbname=tsdb"
  create_templates =['''
    CREATE TABLE IF NOT EXISTS mqtt_consumer (
      host VARCHAR(255),
      topic VARCHAR(255),
      device VARCHAR(17),
      latitude FLOAT,
      longitude FLOAT,
      speed FLOAT,
      altitude FLOAT,
      satellites INTEGER,
      time TIMESTAMPTZ,
      sessionid INTEGER
    );
     SELECT create_hypertable('mqtt_consumer','time',chunk_time_interval := INTERVAL '1 week',if_not_exists := true);
  ''']
  schema = "public"
